<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ic_launcher_background">

    <View
        android:id="@+id/divider3"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <EditText
        android:id="@+id/role2_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/role1_input"
        android:layout_below="@+id/role1_input"
        android:ems="10"
        android:hint="Role Title"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/role5_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/role1_input"
        android:layout_below="@+id/role4_input"
        android:ems="10"
        android:hint="Role Title"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/role4_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/role1_input"
        android:layout_below="@+id/role3_input"
        android:ems="10"
        android:hint="Role Title"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/role3_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/role1_input"
        android:layout_below="@+id/role2_input"
        android:ems="10"
        android:hint="Role Title"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <EditText
        android:id="@+id/role1_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Role Title"
        android:inputType="textPersonName"
        android:singleLine="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add New Roles"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <Button
        android:id="@+id/finish"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@color/colorAccent"
        android:text="Finish" />

    <TextView
        android:id="@+id/restraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Up to five different roles"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/amountRole5_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/amountRole1_input"
        android:layout_alignTop="@+id/role5_input"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:text="0" />

    <EditText
        android:id="@+id/amountRole4_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/role5_input"
        android:layout_alignEnd="@+id/amountRole1_input"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:text="0" />

    <EditText
        android:id="@+id/amountRole3_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/amountRole1_input"
        android:layout_below="@+id/role2_input"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:text="0" />

    <EditText
        android:id="@+id/amountRole2_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/amountRole1_input"
        android:layout_below="@+id/role1_input"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:text="0" />

    <EditText
        android:id="@+id/amountRole1_input"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/role1_input"
        android:layout_toEndOf="@+id/restraint"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:singleLine="true"
        android:text="0" />

    <View
        android:id="@+id/divider2"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent" />

</RelativeLayout>